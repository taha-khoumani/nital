{
    "manifest_version": 3,
    "name": "Nital",
    "version": "0.0.2",
    "icons":{
        "128":"./assets/logo_icon.png"
    },
    "action":{
        "default_popup":"./popup/popup.html",
        "default_icon":"./assets/logo_icon.png"
    },
    "permissions": ["storage","tabs"],
    "content_scripts":[
        {
            "matches":["<all_urls>"],
            "css": ["content_scripts/allUrls.css"],
            "js": ["content_scripts/allUrls.js"],
            "all_frames": true
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}